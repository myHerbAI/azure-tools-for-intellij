<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net472</TargetFramework>
        <RootNamespace>JetBrains.ReSharper.Azure.Localization</RootNamespace>
        <AssemblyName>JetBrains.ReSharper.Azure.Localization</AssemblyName>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="JetBrains.Rider.SDK" Version="$(RiderSDKVersion)" />
        <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies.net472" Version="1.0.2">
          <PrivateAssets>all</PrivateAssets>
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="..\..\..\resources\messages\RiderAzureMessages.properties">
        <Link>Resources/RiderAzureMessages.properties</Link>
      </EmbeddedResource>
    </ItemGroup>

</Project>
